{
    "manifest_version": 2,
    "name": "Custom Home Background",
    "version": "1.0",
    "description": "A simple extension that allows users to add a custom wallpaper to his zenbrowser home.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "128": "icon.png"
    }
  }
  